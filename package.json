{
  "name": "wordpress-starter",
  "version": "1.0.0",
  "description": "wordpress starter",
  "main": "app/index.php",
  "scripts": {
    "plugins:init": "composer install",
    "plugins:update": "composer update",
    "build": "webpack",
    "wp:start": "docker-compose up -d",
    "wp:stop": "docker-compose down",
    "wp:flush": "docker-compose down -v",
    "wp:init": "npm run plugins:init && npm run build && npm run wp:start",
    "dev": "webpack --watch --mode development"
  },
